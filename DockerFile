# --- Build stage ---
FROM node:22-alpine AS builder
WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy everything
COPY . .

# Install root deps (concurrently)
RUN pnpm install

# Install API deps + build
WORKDIR /app/apps/api
RUN pnpm install
RUN pnpm build

# Install Web deps + build
WORKDIR /app/apps/web
RUN pnpm install
RUN pnpm build

# --- Runtime stage ---
FROM node:22-alpine AS runner
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy built output
COPY --from=builder /app .

# Expose port
EXPOSE 3000

# Start API (which also serves web build)
CMD ["npm", "start"]
